<!DOCTYPE html>
<html>
  <head>
    <title>ContactsAppClient</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div>
      <a href="/client/contacts">Home</a>
    </div>
    <div>
      <a href="/client/contacts/new">New Contact</a>
    </div>

    <% flash.each do |name, message|%>
      <p><%= message %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
